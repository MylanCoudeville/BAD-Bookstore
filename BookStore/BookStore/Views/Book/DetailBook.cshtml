@model BookStore.Models.Book.DetailBookViewModel
@{
    ViewBag.SubTitle = "Details";
    ViewBag.Title = $"{Model.DetailsBook.Title}";
    ViewData["Title"] = "Details Book";
}
<h4>@ViewBag.SubTitle</h4>
<div>
    <h4>Book</h4>
    <hr />
    @await Html.PartialAsync("_BookInformation", Model.DetailsBook)
    <div class="row">
        <div class="col-md-2"<label asp-for="Quantity">Quantity:</label></div>
        <div class="col"><input class="form-control" asp-for="Quantity"></div>
        <div class="col">
            <form class="d-inline" asp-action="AddToShoppingCart" asp-controller="Cart" asp-route-bookId="@Model.DetailsBook.Id" asp-route-amount="@Model.Quantity">
                <input type="submit" value="Add Cart" class="btn btn-success" />
            </form>
        </div>
    </div>
</div>
<div class="row">
    <a class="btn btn-primary col-1" asp-action="EditBook" asp-route-Id="@Model.DetailsBook.Id">Edit</a>
    <form class="d-inline col-1" asp-action="DetailBook" asp-controller="Book" asp-route-id="@Model.DetailsBook.Id" style="margin-left: 5px">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
</div>
<div><a asp-action="Index">Back to List</a></div>
