@model BookStore.Models.Book.OverviewBooksViewModel

@foreach (var book in Model.AllBooks)
{
    <div class="card mb-3" style="max-width: 540px;">
      <div class="row g-0">
        <div class="col-md-4">
                <img src="../wwwroot/" class="img-fluid rounded-start" />
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">@book.Title</h5>
            <p class="card-text"><small class="text-body-secondary">@book.Author.FirstName @book.Author.LastName</small></p>
                <p class="card-text"><b>Price:</b> @book.Price</p>
                <p class="card-text"><b>Genre:</b> @book.Genre.Name</p>
            <a href="#" class="card-link">Card link</a>
            <a href="#" class="btn btn-primary">Another link</a>
          </div>
        </div>
      </div>
    </div>
}
