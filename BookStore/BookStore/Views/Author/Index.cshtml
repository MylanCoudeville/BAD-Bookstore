@model BookStore.Models.Author.OverviewAuthorViewModel
@{
    ViewBag.Title = "Author";
    ViewData["Title"] = "Overview Author";
}
<h1>@ViewBag.Title</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Birth Date</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var author in Model.authors)
            {
                <tr>
                    <th scope="row">@author.Id</th>
                    <td>@author.FirstName</td>
                    <td>@author.LastName</td>
                    <td>@author.BirthDate.ToShortDateString()</td>
                    <td>
                        <a class="btn btn-primary" asp-action="EditAuthor" asp-controller="Author" asp-route-id="@author.Id">Edit</a>
                        <form class="d-inline" asp-action="Index" asp-controller="Author" asp-route-id="@author.Id">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
